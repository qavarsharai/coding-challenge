pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/qavarsharai/coding-challenge.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Automated Tests') {
            steps {
                sh 'npm test'
            }
        }
    }
    post {
        always {
            junit 'reports/*.xml'
        }
    }
}